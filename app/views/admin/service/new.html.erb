<%= semantic_form_for @service ,:url => admin_service_index_path do |f| %>
 <%= f.inputs do %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :service_type %>
    <% end %>
    <%= f.actions do %>
      <%= f.action :submit, :as => :button %>
      <%= f.action :cancel, :as => :link %>
    <% end %>
<% end%>
